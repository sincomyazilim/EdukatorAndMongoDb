@model List<Course>
@{
    ViewData["Title"] = "AddCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kurs Sayfası</h6>
        <table class="table table-hover">
            <thead>
                <tr>
                    
                    <th scope="col">Başlık</th>
                    <th scope="col">Fiyat</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">sil</th>
                    <th scope="col">Güncelle</th>
                    <th scope="col">Kursa Git</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td>@item.Name</td>
                        <td>@item.Price ₺</td>
                        <td>@item.Description</td>
                        <td><a href="/Course/DeleteCourse/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Course/UpdateCourse/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                        <td><a href="#" class="btn btn-outline-dark">Siteye Git</a></td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Course/AddCourse/" class="btn btn-outline-dark">Yeni Kurs Girişi</a>
    </div>
</div>

