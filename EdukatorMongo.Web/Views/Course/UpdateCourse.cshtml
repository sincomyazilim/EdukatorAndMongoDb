@model Course
@{
    ViewData["Title"] = "UpdateCourse";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kurs Güncelleme Sayfası</h6>
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label class="form-label">Kategori</label>

                @Html.DropDownListFor(x => x.Id, (List<SelectListItem>) ViewBag.v, new {@class = "form-control"})
            </div>
            <div class="mb-3">
                <label for="Title" class="form-label">Kurs Başlık</label>
                <input type="text" class="form-control" id="Title" asp-for="Name">
            </div>
            <div class="mb-3">
                <label class="form-label">Görsel URL</label>
                <input type="text" class="form-control" asp-for="Picture" />
            </div>
            <div class="mb-3">
                <label class="form-label">Fiyat</label>
                <input type="text" class="form-control" asp-for="Price" />
            </div>
            <div class="mb-3">
                <label class="form-label">Süre</label>
                <input type="text" class="form-control" asp-for="Duration" />
            </div>
            
            <div class="mb-3">
                <label for="Description" class="form-label">Açıklama</label>
                <textarea class="form-control" rows="5" asp-for="Description"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>

