@model Subscribe
<section class="w3l-project" id="subscribe">
    <div class="container-fluid mx-lg-0">
        <div class="row">
            <div class="col-lg-6 bottom-info">
                <div class="project-header-section text-left">
                    <h5 class="title-subw3hny text-left mb-1">Bize Ulaşın</h5>
                    <h3 class="title-w3l">
                        Kampanyalardan ve indirimlerden <span class="inn-text"> Haberdar Olun!</span>
                    </h3>
                    <p class="mt-3 pr-lg-5">Abone olun spam Mail atmıyoruz</p>

                    <form asp-action="AddSubscribe" asp-controller="Default" class="subscribe mt-5" method="post">
                        <input type="email" asp-for="Mail" placeholder="mail adresinizi giriniz" required="">
                        <button class="btn btn-style btn-primary">Abobe Ol</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-6 subcribe-img">
            </div>
        </div>
    </div>
</section>