@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-sm-12 col-xl-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Sayfası</h6>
        <table class="table table-hover">
            <thead>
                <tr>

                    <th scope="col">Icon</th>
                    <th scope="col">Başlık</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">sil</th>
                    <th scope="col">Güncelle</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Icon</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td><a href="/Service/Delete/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Service/Update/@item.Id" class="btn btn-outline-success">Güncelle</a></td>

                    </tr>
                }
            </tbody>
        </table>
        <a href="/Service/Add/" class="btn btn-outline-dark"> Ekle</a>
    </div>
</div>
